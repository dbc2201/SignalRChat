@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row clearfix">
        <label for="userInput" class="col-sm-2 col-form-label col-form-label-lg">User Name</label>
        <div class="col-sm-10">
            <input class="form-control form-control-lg" type="text" id="userInput"/>
        </div>
    </div>
    <br/>
    <div class="row clearfix">
        <label for="messageInput" class="col-sm-2 col-form-label col-form-label-lg">Message</label>
        <div class="col-sm-10">
            <textarea class="form-control form-control-lg" id="messageInput"></textarea>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-lg-12">
            <input class="btn btn-success btn-lg form-control" type="button" id="sendButton" value="Send Message"/>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr/>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>